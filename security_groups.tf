  count = length(var.instance_name) == 0 ? 0 : 1
  
  name        = "gitops_ansilble_sg"
  description = "GitOps LAB sg"
  vpc_id      = "vpc-0ec8067849557d0f8"

  ingress {
    description = "SSH to EC2"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
